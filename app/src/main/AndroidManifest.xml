<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mary.timerforstrel">

    <application
            android:name="mary.breathingtraining.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="mary.breathingtraining.view.activities.TimerActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name="mary.breathingtraining.view.activities.ProgramsActivity" android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="mary.breathingtraining.view.activities.CreateProgramActivity"
                android:noHistory="true" android:screenOrientation="portrait">
        </activity>
        <activity android:name="mary.breathingtraining.view.activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="mary.breathingtraining.view.activities.TutorialActivity" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>